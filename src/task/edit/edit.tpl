<div class="task-title-wrap border border-bottom">
    <input id="edit-task-title" class="input task-title" value="{{title}}" placeholder="请输入任务标题(必填)">
    <span class="err-tip"></span>
</div>

<div class="task-content-wrap border border-bottom">
    <div class="task-words border border-bottom">
        <textarea id="edit-task-content" class="input " placeholder="请输入任务描述(选填)">{{content}}</textarea>
        <span class="err-tip"></span>
    </div>
    <div class="task-attach">
        <div class="task-add-attach">
            添加附件
        </div>
    </div>
</div>

<div class="task-option border border-bottom">
    <div class="task-item border border-bottom"><span>负责人</span></div>
    <div class="task-item"><span>参与人</span></div>
</div>

<div class="task-option border border-bottom">
    <div class="task-item border border-bottom"><span>完成时间</span></div>
    <div class="task-item"><span>紧要程度</span></div>
</div>
